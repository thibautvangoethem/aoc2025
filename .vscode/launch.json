    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'aoc2026'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=aoc2026"
                ]
            },
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust Program with Prompted Arguments",
            "program": "${workspaceFolder}/app.js",
            "args": [
                "${input:arg1}",
                "${input:arg2}"
            ],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "arg1",
            "type": "promptString",
            "description": "Enter the first argument:"
        },
        {
            "id": "arg2",
            "type": "promptString",
            "description": "Enter the second argument:"
        },
    ]
}